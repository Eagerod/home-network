{
    "builders": [
        {
            "type": "vmware-iso",
            "vm_name": "kubernetes-node",
            "output_directory": "${OUTPUT_DIR}",

            "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.7.0-amd64-netinst.iso",
            "iso_checksum": "sha512:cb6795ca61326e9fa58099898e53dc6c708f4b1473687fab5679f824adc78bbe1d543f3b4aed9e56613e7b150e27d6be317efc499e25a92efefed1ed623a90a6",

            "ssh_username": "packer",
            "ssh_password": "${VM_MANAGEMENT_PASSWORD}",
            "ssh_timeout": "1h",

            "shutdown_command": "sudo /sbin/shutdown now",

            "boot_wait": "5s",

            "disk_size": "20000",
            "memory": 1024,

            "http_directory": "http",
            "boot_command": [
                "<esc><wait>",
                "auto preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                "<wait><enter>"
            ],

            "vnc_disable_password": true,

            "remote_type": "esx5",
            "remote_host": "${ESXI_HOST}",
            "remote_username": "${ESXI_USERNAME}",
            "remote_password": "${ESXI_ROOT_PASSWORD}",
            "remote_datastore": "${ESXI_DATASTORE}",

            "vmx_data": {
                "ethernet0.present": "TRUE",
                "ethernet0.startConnected": "TRUE",
                "ethernet0.addressType": "generated",
                "ethernet0.networkName": "${ESXI_NETWORK}",

                "disk.EnableUUID": "TRUE"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install -y apt-transport-https ca-certificates curl gnupg-agent software-properties-common vim nfs-common open-iscsi",
                "curl -fsSL https://download.docker.com/linux/debian/gpg | sudo apt-key add -",
                "curl -fsSL https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key add -",
                "sudo add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/debian buster stable\"",
                "sudo sh -c 'echo \"deb https://apt.kubernetes.io/ kubernetes-xenial main\" > /etc/apt/sources.list.d/kubernetes.list'",
                "sudo apt-get update",
                "sudo apt-get install -y docker-ce=5:19.03.11~3-0~debian-$(lsb_release -cs) docker-ce-cli=5:19.03.11~3-0~debian-$(lsb_release -cs) containerd.io=1.2.13-2 kubelet kubectl kubeadm"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "mkdir -p /tmp/ssh-certs-temp"
            ]
        },
        {
            "type": "file",
            "source": "${SERVER_SSH_KEYS_DIR}/",
            "destination": "/tmp/ssh-certs-temp"
        },
        {
            "type": "shell",
            "inline": [
                "sudo mv /tmp/ssh-certs-temp/* /etc/ssh/",
                "sudo chown -R root:root /etc/ssh",
                "rm -rf /tmp/ssh-certs-temp"
            ]
        }
    ]
}
